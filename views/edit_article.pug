extends layout

block content
    h2 #{title}
    hr
    form(method="POST", action="/articles/edit/"+article._id)
      div.form-group
        label(for="title") Title:
        input#title.form-control(name="title", type="text", value=article.title)
      div.form-group
        label(for="author") Author:
        input.form-control(name="author", type="text", value=article.author)
      div.form-group
        label(for="body") Body:
        textarea.form-control(name="body")= article.body 
      input.btn.btn-primary(type="submit", value="Submit")
